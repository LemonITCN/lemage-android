<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/selectPhotoBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择图片"/>

    <Button
        android:id="@+id/selectVideoBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择视频"
        app:layout_constraintLeft_toRightOf="@id/selectPhotoBut"/>

    <Button
        android:id="@+id/allBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="都选择"
        app:layout_constraintLeft_toRightOf="@id/selectVideoBut"/>

    <Button
        android:id="@+id/onlyBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二选一（以图片为例）"
        app:layout_constraintTop_toBottomOf="@id/selectPhotoBut"/>

    <Button
        android:id="@+id/changeColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换主题颜色"
        app:layout_constraintLeft_toRightOf="@id/onlyBut"
        app:layout_constraintTop_toBottomOf="@id/allBut"/>

    <Button
        android:id="@+id/netSourceBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络地址"
        app:layout_constraintLeft_toRightOf="@id/changeColor"
        app:layout_constraintTop_toBottomOf="@id/allBut"/>

    <Button
        android:id="@+id/cameraBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        app:layout_constraintTop_toBottomOf="@id/onlyBut"/>

    <!--<ImageView-->
        <!--android:id="@+id/imageview"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:background="#aabbcc"-->
        <!--app:layout_constraintTop_toBottomOf="@id/cameraBut"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"/>-->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cameraBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorOrange"
                android:padding="15dp"
                android:text=""
                android:textSize="22sp"
                android:textColor="#555555"
                android:lineSpacingExtra="10dp" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>